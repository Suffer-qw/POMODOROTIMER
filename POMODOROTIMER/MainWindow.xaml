<Window x:Class="POMODOROTIMER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POMODOROTIMER" 
        xmlns:viewmodel="clr-namespace:POMODOROTIMER.ViewModel" 
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        xmlns:US="clr-namespace:POMODOROTIMER.View.UserControls"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="#452F6C"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="MainWindow" Height="450" Width="300">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <US:MainTopBar/>
        </Grid>
        <Grid Grid.Row="1">
            <Button x:Name="btnSetter" Content="Set" 
                    Style="{DynamicResource btnOptional}" 
                    Click="btnSetter_Click"
                    HorizontalAlignment="Left" Margin="20"/>
            <Button x:Name="btnHistori" Content="His" 
                    HorizontalAlignment="Right" 
                    Style="{DynamicResource btnOptional}" 
                    Command="{Binding ShowHisCommand}"/>
            <StackPanel>
                <TextBox x:Name="tbxName" Text="{Binding Name}" Margin="0,100,0,0" Height="60" Width="250"/>
                <TextBlock x:Name="tbTimer" Text="{Binding CurrentTime}" HorizontalAlignment="Center" Margin="20"  FontSize="50"/>
                <Button Style="{DynamicResource btnStart}"
                        x:Name="btnStart"
                        Content="{Binding ContentStart}" 
                        Command="{Binding SwitchCommand}"/>
            </StackPanel>

        </Grid>
    </Grid>
    
</Window>
